<Window x:Class="SportClub.Views.AddTrainingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Dodaj novi trening" Height="500" Width="450"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}">

    <Window.Resources>
        <!-- Dynamic TextBox Style -->
        <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="materialDesign:HintAssist.Foreground" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="materialDesign:TextFieldAssist.UnderlineBrush" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="CaretBrush" Value="{DynamicResource TextBrush}"/>
        </Style>

        <!-- Dynamic ComboBox Style -->
        <Style TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignOutlinedComboBox}">
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="materialDesign:HintAssist.Foreground" Value="{DynamicResource PrimaryBrush}"/>
        </Style>

        <!-- Dynamic DatePicker Style -->
        <Style TargetType="DatePicker" BasedOn="{StaticResource MaterialDesignOutlinedDatePicker}">
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="materialDesign:HintAssist.Foreground" Value="{DynamicResource PrimaryBrush}"/>
        </Style>

        <!-- Dynamic Button Style -->
        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="4"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource SecondaryBrush}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource SecondaryBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <!-- Main Content Card -->
    <Border Style="{DynamicResource MaterialCard}" Margin="0">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Form Title -->
            <TextBlock Grid.Row="0" 
                      Text="Novi Trening" 
                      FontSize="20" 
                      FontWeight="Bold"
                      Foreground="{DynamicResource PrimaryBrush}"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,20"/>

            <!-- Naziv treninga -->
            <TextBox materialDesign:HintAssist.Hint="Naziv treninga"
                     x:Name="NameTextBox" 
                     Grid.Row="1"
                     materialDesign:HintAssist.IsFloating="True"/>

            <!-- Tip treninga -->
            <ComboBox materialDesign:HintAssist.Hint="Tip treninga"
                      x:Name="TypeComboBox" 
                      Grid.Row="2"
                      materialDesign:HintAssist.IsFloating="True">
                <ComboBoxItem>Cardio</ComboBoxItem>
                <ComboBoxItem>Lead</ComboBoxItem>
                <ComboBoxItem>Boulder</ComboBoxItem>
                <ComboBoxItem>Mobility</ComboBoxItem>
                <ComboBoxItem>Speed</ComboBoxItem>
            </ComboBox>

            <!-- Datum treninga -->
            <DatePicker materialDesign:HintAssist.Hint="Datum treninga"
                        x:Name="DatePicker" 
                        Grid.Row="3"
                        materialDesign:HintAssist.IsFloating="True"/>

            <!-- Vrijeme treninga -->
            <TextBox materialDesign:HintAssist.Hint="Vrijeme (HH:mm)"
                     x:Name="TimeTextBox" 
                     Grid.Row="4"
                     materialDesign:HintAssist.IsFloating="True"/>

            <!-- Buttons -->
            <StackPanel Grid.Row="6" 
                       Orientation="Horizontal" 
                       HorizontalAlignment="Right" 
                       Margin="0,20,0,0">

                <Button Content="Spremi" 
                       Click="Save_Click"
                       materialDesign:ButtonAssist.CornerRadius="4">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Width" Value="100"/>
                            <Setter Property="Height" Value="36"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource SecondaryBrush}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="Odustani" 
                       Click="Cancel_Click"
                       Margin="10,0,0,0"
                       materialDesign:ButtonAssist.CornerRadius="4">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
                            <Setter Property="Width" Value="100"/>
                            <Setter Property="Height" Value="36"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <SolidColorBrush Color="{DynamicResource PrimaryColor}" Opacity="0.1"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>