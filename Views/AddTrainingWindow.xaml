<Window x:Class="SportClub.Views.AddTrainingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Dodaj novi trening" Height="300" Width="400"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="20">
        <StackPanel>
            <TextBox materialDesign:HintAssist.Hint="Naziv treninga"
                     x:Name="NameTextBox" Margin="0,0,0,10"/>

            <ComboBox materialDesign:HintAssist.Hint="Tip treninga"
                      x:Name="TypeComboBox" Margin="0,0,0,10">
                <ComboBoxItem>Cardio</ComboBoxItem>
                <ComboBoxItem>Lead</ComboBoxItem>
                <ComboBoxItem>Boulder</ComboBoxItem>
                <ComboBoxItem>Mobility</ComboBoxItem>
                <ComboBoxItem>Speed</ComboBoxItem>
            </ComboBox>

            <DatePicker materialDesign:HintAssist.Hint="Datum treninga"
                        x:Name="DatePicker" Margin="0,0,0,10"/>

            <TextBox materialDesign:HintAssist.Hint="Vrijeme (HH:mm)"
                     x:Name="TimeTextBox" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Odustani" Click="Cancel_Click" Margin="0,0,10,0"
                        Style="{StaticResource MaterialDesignFlatButton}"/>
                <Button Content="Spremi" Click="Save_Click"
                        Style="{StaticResource MaterialDesignRaisedButton}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>