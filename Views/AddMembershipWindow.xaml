<Window x:Class="SportClub.Views.AddMembershipWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Dodavanje Članarine" Height="500" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundBrush}">

    <Window.Resources>
        <!-- Dynamic TextBox Style -->
        <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="materialDesign:HintAssist.Foreground" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="materialDesign:TextFieldAssist.UnderlineBrush" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="CaretBrush" Value="{DynamicResource TextBrush}"/>
        </Style>

        <!-- Dynamic Button Style -->
        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="4"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource SecondaryBrush}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource SecondaryBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Dynamic TextBlock Style for Labels -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
    </Window.Resources>

    <!-- Main Content Card -->
    <Border Style="{DynamicResource MaterialCard}" Margin="0">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Form Title -->
            <TextBlock Grid.Row="0" 
                      Text="Nova Članarina" 
                      FontSize="20" 
                      FontWeight="Bold"
                      Foreground="{DynamicResource PrimaryBrush}"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,20"/>

            <!-- Naziv -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Naziv:"/>
                <TextBox x:Name="NazivTextBox" 
                        Grid.Row="1"
                        materialDesign:HintAssist.Hint="Unesite naziv članarine"
                        materialDesign:HintAssist.IsFloating="False"/>
            </Grid>

            <!-- Cijena -->
            <Grid Grid.Row="2" Margin="0,10,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Cijena (km):"/>
                <TextBox x:Name="CijenaTextBox" 
                        Grid.Row="1"
                        materialDesign:HintAssist.Hint="Unesite cijenu u eurima"
                        materialDesign:HintAssist.IsFloating="False"
                        PreviewTextInput="CijenaTextBox_PreviewTextInput"/>
            </Grid>

            <!-- Trajanje -->
            <Grid Grid.Row="3" Margin="0,10,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Trajanje (dani):"/>
                <TextBox x:Name="TrajanjeTextBox" 
                        Grid.Row="1"
                        materialDesign:HintAssist.Hint="Unesite trajanje u danima"
                        materialDesign:HintAssist.IsFloating="False"
                        PreviewTextInput="TrajanjeTextBox_PreviewTextInput"
                        Margin="0,0,0,20"/>
            </Grid>

            <!-- Buttons -->
            <StackPanel Grid.Row="8" 
                       Orientation="Horizontal" 
                       HorizontalAlignment="Right" 
                       Margin="0,20,0,0">

                <Button Content="Sačuvaj" 
                       Click="SaveButton_Click"
                       materialDesign:ButtonAssist.CornerRadius="4">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Width" Value="100"/>
                            <Setter Property="Height" Value="36"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource SecondaryBrush}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="Otkaži" 
                       Click="CancelButton_Click"
                       Margin="10,0,0,0"
                       materialDesign:ButtonAssist.CornerRadius="4">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
                            <Setter Property="Width" Value="100"/>
                            <Setter Property="Height" Value="36"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <SolidColorBrush Color="{DynamicResource PrimaryColor}" Opacity="0.1"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>