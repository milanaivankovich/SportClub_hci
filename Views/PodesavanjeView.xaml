<UserControl x:Class="SportClub.Views.PodesavanjeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" d:DesignWidth="800"
             Background="{DynamicResource BackgroundBrush}">
    <UserControl.Resources>
        <Style x:Key="SettingsCard" TargetType="materialDesign:Card">
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="16"/>
            <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp2"/>
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
        </Style>
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="Margin" Value="0,16,0,8"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="24,16">

            <!-- Header -->
            <TextBlock Text="Podešavanja"
                       Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                       Foreground="{DynamicResource PrimaryBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,24"/>

            <!-- Password Change Card -->
            <materialDesign:Card Style="{StaticResource SettingsCard}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <materialDesign:PackIcon Kind="Lock"
                                                 Width="24" Height="24"
                                                 Foreground="{DynamicResource PrimaryBrush}"
                                                 VerticalAlignment="Center"/>
                        <TextBlock Text="Promjena lozinke"
                                   Style="{StaticResource SectionHeader}"
                                   Margin="8,0,0,0"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <TextBlock Text="Trenutna lozinka" Style="{StaticResource FieldLabel}"/>
                    <PasswordBox x:Name="CurrentPasswordBox"
                                 Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                 materialDesign:HintAssist.Hint="Unesite trenutnu lozinku"
                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                 PasswordChanged="CurrentPasswordBox_PasswordChanged"
                                 Margin="0,0,0,16"/>

                    <TextBlock Text="Nova lozinka" Style="{StaticResource FieldLabel}"/>
                    <PasswordBox x:Name="NewPasswordBox"
                                 Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                 materialDesign:HintAssist.Hint="Unesite novu lozinku"
                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                 PasswordChanged="NewPasswordBox_PasswordChanged"
                                 Margin="0,0,0,16"/>

                    <TextBlock Text="Potvrdi novu lozinku" Style="{StaticResource FieldLabel}"/>
                    <PasswordBox x:Name="ConfirmPasswordBox"
                                 Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                 materialDesign:HintAssist.Hint="Ponovite novu lozinku"
                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                 PasswordChanged="ConfirmPasswordBox_PasswordChanged"
                                 Margin="0,0,0,24"/>

                    <Button Content="PROMIJENI LOZINKU"
                            Command="{Binding ChangePasswordCommand}"
                            Background="{DynamicResource PrimaryBrush}"
                            Foreground="White"
                            Style="{DynamicResource MaterialDesignRaisedButton}"
                            HorizontalAlignment="Right"
                            Width="180"
                            Height="40"/>
                </StackPanel>
            </materialDesign:Card>

            <!-- Appearance Settings Card -->
            <materialDesign:Card Style="{StaticResource SettingsCard}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <materialDesign:PackIcon Kind="Palette"
                                                 Width="24" Height="24"
                                                 Foreground="{DynamicResource PrimaryBrush}"
                                                 VerticalAlignment="Center"/>
                        <TextBlock Text="Izgled aplikacije"
                                   Style="{StaticResource SectionHeader}"
                                   Margin="8,0,0,0"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Theme Selection -->
                    <TextBlock Text="Tema aplikacije" Style="{StaticResource FieldLabel}"/>
                    <ComboBox ItemsSource="{Binding AvailableThemes}"
                              SelectedItem="{Binding SelectedTheme}"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              materialDesign:HintAssist.Hint="Odaberite temu"
                              Margin="0,0,0,16">
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                <Setter Property="Padding" Value="16,12"/>
                            </Style>
                        </ComboBox.ItemContainerStyle>
                    </ComboBox>

                    <!-- Font Selection -->
                    <TextBlock Text="Font aplikacije" Style="{StaticResource FieldLabel}"/>
                    <ComboBox ItemsSource="{Binding AvailableFonts}"
                              SelectedItem="{Binding SelectedFont}"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              materialDesign:HintAssist.Hint="Odaberite font"
                              Margin="0,0,0,16">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontFamily="{Binding}" FontSize="14"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                <Setter Property="Padding" Value="16,12"/>
                            </Style>
                        </ComboBox.ItemContainerStyle>
                    </ComboBox>

                    <!-- Font Size Selection -->
                    <TextBlock Text="Veličina fonta" Style="{StaticResource FieldLabel}"/>
                    <ComboBox ItemsSource="{Binding AvailableFontSizes}"
                              SelectedItem="{Binding SelectedFontSize}"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              materialDesign:HintAssist.Hint="Odaberite veličinu fonta"
                              Margin="0,0,0,24">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding StringFormat='{}{0}px'}"
                                           FontSize="{Binding}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                <Setter Property="Padding" Value="16,12"/>
                            </Style>
                        </ComboBox.ItemContainerStyle>
                    </ComboBox>

                    <!-- Theme Preview -->
                    <Border Background="{DynamicResource SurfaceBrush}"
                            BorderBrush="{DynamicResource PrimaryBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="16"
                            Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="Pregled teme"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource PrimaryBrush}"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Ovo je primjer kako će tekst izgledati sa odabranim podešavanjima."
                                       Foreground="{DynamicResource TextBrush}"
                                       TextWrapping="Wrap"
                                       FontFamily="{Binding SelectedFont}"
                                       FontSize="{Binding SelectedFontSize}"/>
                        </StackPanel>
                    </Border>

                    <!-- Info Text -->
                    <Border Background="{DynamicResource PrimaryBrush}"
                            Opacity="0.1"
                            CornerRadius="4"
                            Padding="12"
                            Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Information"
                                                     Width="16" Height="16"
                                                     Foreground="{DynamicResource PrimaryBrush}"
                                                     VerticalAlignment="Top"
                                                     Margin="0,2,8,0"/>
                            <TextBlock Text="Promjene se automatski primjenjuju i čuvaju. Tema se primjenjuje na cijelu aplikaciju."
                                       Foreground="{DynamicResource TextBrush}"
                                       FontSize="12"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </materialDesign:Card>
        </StackPanel>
    </ScrollViewer>
</UserControl>