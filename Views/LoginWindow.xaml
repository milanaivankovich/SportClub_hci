<Window x:Class="SportClub.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:vm="clr-namespace:SportClub.ViewModels"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Height="600" Width="800"
        Title="SportClub Login">
    <Window.Resources>
        <SolidColorBrush x:Key="DarkRedBorderBrush" Color="#8B0000" />
        <SolidColorBrush x:Key="LightRedBackground" Color="#FF6347" />
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.6*"/>
            <ColumnDefinition Width="0.4*"/>
        </Grid.ColumnDefinitions>

        
        <Image Grid.Column="0" Source="/Resources/climbing.jpg" Stretch="UniformToFill">
            <Image.Effect>
                <DropShadowEffect ShadowDepth="10" BlurRadius="20" Opacity="0.5" Color="Black"/>
            </Image.Effect>
        </Image>

        
        <Border Grid.Column="1" Background="{StaticResource LightRedBackground}" BorderBrush="{StaticResource DarkRedBorderBrush}" BorderThickness="2">
            <Grid>
                
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="260">
                    <TextBlock Text="Prijavi se!" 
							   FontSize="28" 
							   FontWeight="Bold" 
							   Foreground="White" 
							   HorizontalAlignment="Center" 
							   Margin="0,0,0,30"/>

                    
                    <Grid Margin="0,0,0,15">
                        <TextBox x:Name="UsernameTextBox"
								 Height="45"
								 FontSize="14"
								 Padding="40,0,10,0"
								 Background="Transparent"
								 BorderBrush="{StaticResource DarkRedBorderBrush}"
								 BorderThickness="0,0,0,2"
								 VerticalContentAlignment="Center"
								 Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock Text="Korisničko ime" 
								   IsHitTestVisible="False"
								   Foreground="White"
								   FontSize="14"
								   Margin="40,0,0,0"
								   VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=UsernameTextBox}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <materialDesign:PackIcon Kind="AccountOutline" 
												 Width="24" 
												 Height="24" 
												 Foreground="{StaticResource DarkRedBorderBrush}" 
												 VerticalAlignment="Center"
												 HorizontalAlignment="Left"
												 Margin="10,0,0,0"/>
                    </Grid>

                    
                    <Grid Margin="0,0,0,25">
                        
                        <TextBox x:Name="PasswordTextBox"
                                 Height="45"
                                 FontSize="14"
                                 Padding="40,0,40,0"
                                 Background="Transparent"
                                 BorderBrush="{StaticResource DarkRedBorderBrush}"
                                 BorderThickness="0,0,0,2"
                                 VerticalContentAlignment="Center"
                                 Text="{Binding PasswordText, UpdateSourceTrigger=PropertyChanged}"/>

                       
                        <PasswordBox x:Name="PasswordBox"
                                     Height="45"
                                     FontSize="14"
                                     Padding="40,40,40,0"
                                     Background="Transparent"
                                     BorderBrush="{StaticResource DarkRedBorderBrush}"
                                     BorderThickness="0,0,0,2"
                                     VerticalContentAlignment="Center"
                                     PasswordChanged="PasswordBox_PasswordChanged" Margin="39,0,40,0">
                            <PasswordBox.Style>
                                <Style TargetType="PasswordBox">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsPasswordVisible}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </PasswordBox.Style>
                        </PasswordBox>

                        
                        <TextBlock Text="Lozinka" 
                                   IsHitTestVisible="False"
                                   Foreground="White"
                                   FontSize="14"
                                   Margin="40,0,0,0"
                                   VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                       
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsPasswordVisible}" Value="False"/>
                                                <Condition Binding="{Binding Password}" Value=""/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsPasswordVisible}" Value="False"/>
                                                <Condition Binding="{Binding Password}" Value="{x:Null}"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </MultiDataTrigger>
                                        
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsPasswordVisible}" Value="True"/>
                                                <Condition Binding="{Binding PasswordText}" Value=""/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsPasswordVisible}" Value="True"/>
                                                <Condition Binding="{Binding PasswordText}" Value="{x:Null}"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <materialDesign:PackIcon Kind="LockOutline" 
                                                 Width="24" 
                                                 Height="24" 
                                                 Foreground="{StaticResource DarkRedBorderBrush}" 
                                                 VerticalAlignment="Center"
                                                 HorizontalAlignment="Left"
                                                 Margin="10,0,0,0"/>

                      
                        <ToggleButton x:Name="PasswordVisibilityToggle"
                                      IsChecked="{Binding IsPasswordVisible}"
                                      Width="30"
                                      Height="30"
                                      HorizontalAlignment="Right"
                                      VerticalAlignment="Center"
                                      Margin="0,0,5,0"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      Cursor="Hand">
                            <ToggleButton.Style>
                                <Style TargetType="ToggleButton">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Grid Background="Transparent">
                                                    <materialDesign:PackIcon x:Name="EyeIcon" 
                                                                             Kind="EyeOutline" 
                                                                             Width="20" 
                                                                             Height="20" 
                                                                             Foreground="{StaticResource DarkRedBorderBrush}"/>
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="EyeIcon" Property="Kind" Value="EyeOffOutline"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="EyeIcon" Property="Foreground" Value="#B22222"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ToggleButton.Style>
                        </ToggleButton>
                    </Grid>

                   
                    <Button Content="PRIJAVI SE" 
							Command="{Binding LoginCommand}"
							Height="45"
							FontSize="16"
							FontWeight="Bold"
							Foreground="White"
							Background="{StaticResource DarkRedBorderBrush}"
							BorderThickness="0"
							Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
													Background="{TemplateBinding Background}"
													BorderBrush="{TemplateBinding BorderBrush}"
													BorderThickness="{TemplateBinding BorderThickness}"
													CornerRadius="3">
                                                <ContentPresenter HorizontalAlignment="Center" 
																  VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#B22222"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#660000"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>