<Window x:Class="SportClub.Views.AddClubMemberWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Dodavanje Člana" Height="600" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundBrush}">

    <Window.Resources>
        <!-- Dynamic TextBox Style -->
        <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="materialDesign:HintAssist.Foreground" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="materialDesign:TextFieldAssist.UnderlineBrush" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="CaretBrush" Value="{DynamicResource TextBrush}"/>
        </Style>

        <!-- Dynamic Button Style -->
        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="4"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource SecondaryBrush}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource SecondaryBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Dynamic CheckBox Style -->
        <Style TargetType="CheckBox" BasedOn="{StaticResource MaterialDesignCheckBox}">
            <Setter Property="Margin" Value="0,10,0,20"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="materialDesign:CheckBoxAssist.CheckBoxSize" Value="22"/>
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
        </Style>

        <!-- Dynamic TextBlock Style for Labels -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <!-- Dynamic DatePicker Style -->
        <Style TargetType="DatePicker" BasedOn="{StaticResource MaterialDesignOutlinedDatePicker}">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="materialDesign:HintAssist.Foreground" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="Margin" Value="0,5,0,10"/>
        </Style>
    </Window.Resources>

    <!-- Main Content Card -->
    <Border Style="{DynamicResource MaterialCard}" Margin="0">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Form Title -->
            <TextBlock Grid.Row="0" 
                      Text="Novi Član Kluba" 
                      FontSize="20" 
                      FontWeight="Bold"
                      Foreground="{DynamicResource PrimaryBrush}"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,20"/>

            <!-- Ime -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Ime:"/>
                <TextBox x:Name="ImeTextBox" 
                        Grid.Row="1"
                        materialDesign:HintAssist.Hint="Unesite ime"
                        materialDesign:HintAssist.IsFloating="False"/>
            </Grid>

            <!-- Prezime -->
            <Grid Grid.Row="2" Margin="0,10,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Prezime:"/>
                <TextBox x:Name="PrezimeTextBox" 
                        Grid.Row="1"
                        materialDesign:HintAssist.Hint="Unesite prezime"
                        materialDesign:HintAssist.IsFloating="False"/>
            </Grid>

            <!-- Datum rođenja -->
            <Grid Grid.Row="3" Margin="0,10,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Datum rođenja:"/>
                <DatePicker x:Name="DatumRodjenjaDatePicker" 
                           Grid.Row="1"
                           materialDesign:HintAssist.Hint="Izaberite datum"
                           materialDesign:HintAssist.IsFloating="False"/>
            </Grid>

            <!-- Aktivan -->
            <CheckBox x:Name="AktivanCheckBox" 
                     Grid.Row="4" 
                     Content="Aktivan" 
                     IsChecked="True"
                     Margin="0,20,0,20"/>

            <!-- Separator Line -->
            <Border Grid.Row="7" 
                   Height="1" 
                   Background="{DynamicResource PrimaryBrush}" 
                   Opacity="0.2"
                   Margin="0,10,0,10"/>

            <!-- Buttons -->
            <StackPanel Grid.Row="8" 
                       Orientation="Horizontal" 
                       HorizontalAlignment="Right" 
                       Margin="0,20,0,0">

                <Button Content="Sačuvaj" 
                       Click="SaveButton_Click"
                       materialDesign:ButtonAssist.CornerRadius="4">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Width" Value="100"/>
                            <Setter Property="Height" Value="36"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource SecondaryBrush}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="Otkaži" 
                       Click="CancelButton_Click"
                       Margin="10,0,0,0"
                       materialDesign:ButtonAssist.CornerRadius="4">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
                            <Setter Property="Width" Value="100"/>
                            <Setter Property="Height" Value="36"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <SolidColorBrush Color="{DynamicResource PrimaryColor}" Opacity="0.1"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>